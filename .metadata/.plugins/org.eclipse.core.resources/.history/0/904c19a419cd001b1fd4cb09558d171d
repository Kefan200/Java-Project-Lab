import java.util.Vector;

public class MenuController {

	public static String errorMessage;
	public MenuController() {
		// TODO Auto-generated constructor stub
	}
	public static Vector<Menu> getAllMenus(){
		Menu menu=new Menu();
		return menu.getAll();
	}
	public static boolean insertMenu(String role, String name, String username, String status, int salary) {
		if(role.isBlank()) {
			errorMessage="Role must be filled!";
			return false;
		}else if(name.isBlank()) {
			errorMessage="Name must be filled!";
			return false;
		}else if(username.isBlank()) {
			errorMessage="Username must be filled!";
			return false;
		}else if(status.isBlank()) {
			errorMessage="Status must be filled!";
			return false;
		}else if(salary==0) {
			errorMessage="Salary must be filled!";
			return false;
		}
		
		Menu menu=new Menu();
		menu.setRole(role);
		menu.setName(name);
		menu.setUsername(username);
		menu.setStatus(status);
		menu.setSalary(salary);
		
		return menu.insert();
	}
}
